<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="colorPrimary">@color/button_red</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--
    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="android:navigationIcon">@drawable/ic_left_black</item>
    </style> -->

    <style name="GlobalMargin">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="title">
        <item name="android:textSize">30dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="title.text_red">
        <item name="android:textColor">@color/text_red</item>
    </style>

    <style name="title.text_gray">
        <item name="android:textColor">@color/text_gray</item>
    </style>

    <style name="subTitle">
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="subTitle.text_red">
        <item name="android:textColor">@color/text_red</item>
    </style>

    <style name="subTitle.text_gray">
        <item name="android:textColor">@color/text_gray</item>
    </style>

    <style name="text">
        <item name="android:textSize">15dp</item>
    </style>

    <style name="text.text_red">
        <item name="android:textColor">@color/text_red</item>
    </style>

    <style name="text.text_gray">
        <item name="android:textColor">@color/text_gray</item>
    </style>

    <style name="text.text_green">
        <item name="android:textColor">@color/text_green</item>
    </style>

    <style name="text.text_gray.blod">
        <item name="android:textStyle">bold</item>
    </style>


    <style name="text.text_green.bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button">
        <item name="android:height">@dimen/size_52</item>
        <item name="cornerRadius">@dimen/size_20</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="button.red">
        <item name="backgroundTint">@color/button_red</item>
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="button.green">
        <item name="backgroundTint">@color/button_green</item>
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="button.white">
        <item name="backgroundTint">@color/text_white</item>
        <item name="android:textColor">@color/button_green</item>
    </style>

    <style name="buttonWhite">
        <item name="android:height">52dp</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/button_blue_stroke</item>
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="buttonOutlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">20dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="buttonOutlined.red">
        <item name="strokeColor">@color/button_red</item>
        <item name="android:textColor">@color/text_red</item>
    </style>

    <style name="buttonOutlined.withe" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/button_blue_stroke</item>
        <item name="android:textColor">@color/text_gray</item>
    </style>


    <style name="autoAdjustImageView">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="textHeader" parent="text.text_gray">
        <item name="android:textSize">@dimen/text_size_25</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textHeaderRed" parent="textHeader">
        <item name="android:textColor">@color/text_red</item>
    </style>

    <style name="textDetail" parent="text.text_gray">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textMenu" parent="text.text_green">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="cardAlert" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/text_white</item>
    </style>
</resources>
